{
  "custom": {
    "^u--(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
    "^up-(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
    "^u-([^-].*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
    	"path" : "pages/home/home",
    	"style" : 
    	{
          "navigationBarTitleText": "home",
          "enablePullDownRefresh": false,
          "navigationStyle": "custom"
    	}
    },
    {
      "path" : "pages/other/bankList",
      "style" :
      {
        "navigationBarTitleText": "通讯录列表",
        "enablePullDownRefresh": false
      }
    }
  ],
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/components/uni-$1.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "#000000",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff",
    "backgroundColorTop": "#ffffff",
    "backgroundColorBottom": "#ffffff",
    "navigationBarTitleText": "金盾",
    "app-plus": {
      "bounce": "none",
      "background": "#F4F5F7",
      "compatible": {
        "ignoreVersion": true
      }
    }
  },
  "tabBar": {
    "color": "#363636",
    "selectedColor": "#A96D36",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "iconWidth": "18px",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/img/tabbar/home.png",
        "selectedIconPath": "static/img/tabbar/home_active.png",
        "text": "主页"
      }, {
        "pagePath": "pages/news/index",
        "iconPath": "static/img/tabbar/advertising.png",
        "selectedIconPath": "static/img/tabbar/advertising_active.png",
        "text": "新闻"
      }, {
        "pagePath": "pages/ad/ad",
        "iconPath": "static/img/tabbar/ad.png",
        "selectedIconPath": "static/img/tabbar/ad_active.png",
        "text": "广告"
      }
    , {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/img/tabbar/user.png",
        "selectedIconPath": "static/img/tabbar/user_active.png",
        "text": "我的"
      }
    ]
  }
}
